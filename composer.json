{
    "name": "c01l/formal-theory",
    "type": "library",
    "description": "FormalTheory is a library that allows for manipulation and conversion of NFAs, DFAs and Regular Expressions.",
    "version": "2.3.0",
    "keywords": [
        "formal",
        "theory",
        "regex",
        "regular",
        "expression",
        "dfa",
        "nfa",
        "fa",
        "deterministic",
        "nondeterministic",
        "finite",
        "automata",
        "lexer",
        "transform",
        "optimizer",
        "state"
    ],
    "homepage": "https://github.com/witrin/FormalTheory",
    "license": "MIT",
    "authors": [
        {
            "name": "Kendall Hopkins",
            "email": "softwareelves@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.10",
        "vimeo/psalm": "^4.11"
    },
    "autoload": {
        "psr-4": {
            "FormalTheory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FormalTheory\\Tests\\": "tests/"
        }
    }
}
